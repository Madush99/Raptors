<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".clothes_cart">

    <RelativeLayout
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colormadush"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Total Price = "
            android:textColor="@color/colorheliwhite"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cart_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl11"
        android:layout_above="@+id/cart_buy_btn"/>

    <Button
        android:id="@+id/cart_buy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons1"
        android:text="Buy Now"
        android:textColor="@color/colorheliwhite"
        android:textSize="20sp"
        android:layout_margin="10dp"



        />








</RelativeLayout>