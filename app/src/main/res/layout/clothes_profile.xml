<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clothes_profile">

    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image_details"
        android:text="Model"
        android:paddingTop="10dp"
        android:textColor="@color/colormadush"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/product_description_details"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Description"
        android:textColor="@color/colormadush"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description_details"
        android:text="Price"
        android:textColor="@color/colormadush"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/product_price_details"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        android:elevation="6dp"

        app:backGroundColor="@color/colormadush"
        app:backgroundDrawable="@drawable/buttons1"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textSize="13sp" />


    <Button
        android:id="@+id/pd_add_to_wish_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pd_add_to_cart_button"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttons1"
        android:text="Add to wishlist"
        android:textColor="@color/colorheliwhite"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pd_add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/buttons1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Add to bag"
        android:textColor="@color/colorheliwhite"
        android:textSize="17sp"
        android:textStyle="bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="532dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="193dp"
        android:background="@drawable/border2" />


</RelativeLayout>